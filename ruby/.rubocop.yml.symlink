require: rubocop-rspec

AllCops:
  Exclude:
    - "db/schema.rb"

Metrics/AbcSize:
  Exclude:
    - "db/migrate/*"

Metrics/ClassLength:
  Exclude:
    - "db/migrate/*"

Metrics/MethodLength:
  Exclude:
    - "db/migrate/*"

Style/StringLiterals:
  EnforcedStyle: double_quotes

Layout/LineLength:
  Max: 80

Layout/MultilineOperationIndentation:
  EnforcedStyle: indented

Rails:
  Enabled: true

Style/Documentation:
  Enabled: false
