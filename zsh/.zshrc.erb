<% if linux? %>export TERM='xterm'<% end %>

# Path to your oh-my-zsh configuration.
export ZSH=$HOME/.oh-my-zsh

# Set to the name theme to load.
# Look in ~/.oh-my-zsh/themes/

export ZSH_THEME="elektronaut-blue-bright<% if rbenv? %>-rbenv<% end %>"

# Set to this to use case-sensitive completion
# export CASE_SENSITIVE="true"

# Comment this out to disable weekly auto-update checks
export DISABLE_AUTO_UPDATE="true"

# Uncomment following line if you want to disable colors in ls
# export DISABLE_LS_COLORS="true"

# Which plugins would you like to load? (plugins can be found in ~/.oh-my-zsh/plugins/*)
# Example format: plugins=(rails git textmate ruby lighthouse)
plugins=(git go heroku ruby rails rake gem node bundler capistrano vagrant)
<% if osx? %>plugins+=(osx terminalapp brew sublime)<% end %>
<% if pow? %>plugins+=(pow powder)<% end %>
<% if rbenv? %>plugins+=(rbenv)<% end %>

source $ZSH/oh-my-zsh.sh

# Customize to your needs...

<% if osx? %>
export EDITOR='/Applications/Sublime\ Text\.app/Contents/SharedSupport/bin/subl -w'
export GIT_EDITOR='/Applications/Sublime\ Text\.app/Contents/SharedSupport/bin/subl -w'
export SSL_CERT_FILE=/usr/local/etc/openssl/certs/cert.pem
<% else %>
export EDITOR='vim'
export GIT_EDITOR='vim'
<% end %>

export PATH=$HOME/.bin:$HOME/.rbenv/bin:/usr/local/rbenv/bin:/opt/local/bin:/opt/local/sbin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/usr/X11/bin:/usr/bin/X11:/usr/games:/usr/X11R6/bin:/usr/local/mysql/bin

export GOPATH="$HOME/Dev/go"

export LC_CTYPE="en_US.UTF-8"

<% if rbenv? %>
# Load rbenv
eval "$(rbenv init -)"
<% end %>